{
  "compilerOptions": {
    "target": "ES2021",
    "module": "NodeNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node16"
  },
  "include": [
    "src/**/*.ts"
  ]
}